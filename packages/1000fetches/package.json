{
  "name": "1000fetches",
  "version": "0.1.11",
  "description": "A type-first HTTP client with compile-time path validation, schema validation, middleware, retries, and real-time streaming â€” powered by native fetch. Supports Zod, Valibot, ArkType, and any Standard Schema-compatible library.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc && vite build && node scripts/copy-assets.js",
    "dev": "vite build --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "tsc": "tsc --noEmit",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "copy-assets": "node scripts/copy-assets.js",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "http",
    "client",
    "typescript",
    "fetch",
    "axios",
    "api",
    "schema",
    "validation",
    "zod",
    "valibot",
    "arktype"
  ],
  "author": "kioviensis",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kioviensis/1000fetches.git"
  },
  "bugs": {
    "url": "https://github.com/kioviensis/1000fetches/issues"
  },
  "homepage": "https://github.com/kioviensis/1000fetches#readme",
  "devDependencies": {
    "@types/node": "22.18.9",
    "@vitest/coverage-v8": "3.2.4",
    "arktype": "2.1.23",
    "expect-type": "1.2.2",
    "msw": "2.11.5",
    "rollup-plugin-visualizer": "6.0.4",
    "terser": "5.44.0",
    "typescript": "5.9.3",
    "valibot": "1.1.0",
    "vite": "7.1.10",
    "vite-plugin-dts": "4.5.4",
    "vitest": "3.2.4",
    "zod": "4.1.12"
  },
  "peerDependencies": {
    "arktype": "^2.0.0",
    "valibot": "^1.0.0",
    "zod": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "arktype": {
      "optional": true
    },
    "valibot": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  },
  "dependencies": {
    "@standard-schema/spec": "^1.0.0"
  }
}
